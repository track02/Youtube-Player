{
  "manifest_version": 2,
  "name": "Youtube-Player",
  "version": "0.2",

  "description": "Youtube video controller",

  "background":{
	"scripts" :["Scripts/TabMonitor.js"]
  },


  "applications": {
    "gecko": {
    "id": "YCtrl@track02.addons.mozilla.org"
    }
  },


  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["Scripts/PageListener.js"]
    }
  ],

  "permissions": [
      "storage",
	  "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/play_48.png",
    "default_title": "Youtube Controller",
    "default_popup": "Pages/YCtrl.html"
  },

  "commands": {

    "play-pause-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Toggles play/pause"
    },

    "play-next-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Skips to next video"
    },

    "replay-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Replays current video"
    },

    "skip-fwd-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Jumps forward by set time slider in current video"
    },

    "skip-back-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Jumps back by set time slider in current video"
    }

  }

}
